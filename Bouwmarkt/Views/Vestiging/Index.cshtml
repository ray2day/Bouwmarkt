@model IEnumerable<Vestiging>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Vestiging Lijst</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Vestiging" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-lg"></i>&nbsp;Voeg nieuwe vestiging toe</a>
        </div>
    </div>





    <table class="table table-bordered table-striped" style="width:100%">
        <thead></thead>
        <tr>
            <th>
                Vestigingsnummer
            </th>
            <th>
                Naam
            </th>
            <th>
                Adres
            </th>
            <th>
                Plaats
            </th>
            <th>
                Telefoonnummer
            </th>
            <th>

            </th>
        </tr>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="10%">
                        @obj.VestigingsNummer
                    </td>
                    <td width="20%">
                        @obj.Naam
                    </td>
                    <td width="20%">
                        @obj.Adres
                    </td>
                    <td width="15%">
                        @obj.Plaats
                    </td>
                    <td width="15%">
                        @obj.TelefoonNummer
                    </td>
                    <td>
                        <div class="w-200 btn-group" role="group">
                            <a asp-controller="Vestiging" asp-action="Edit" asp-route-id="@obj.VestigingsNummer"
                            class="btn btn-primary mx-2"><i class="bi bi-pencil"></i>&nbsp;Wijzig</a>
                            <a asp-controller="Vestiging" asp-action="Delete" asp-route-id="@obj.VestigingsNummer"
                            class="btn btn-danger mx-2"><i class="bi bi-trash3"></i>&nbsp;Wissen</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>